<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialod_approach_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@color/primaryTextColor"
            android:gravity="center"
            android:text="Approach to be coach in coachy "
            android:textColor="#F60723"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            />

        <ImageButton
            android:id="@+id/drawer_dismiss_dialog_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_close_white_24dp"
            android:tint="@android:color/black" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_width="match_parent"-->
        <!--            app:cardCornerRadius="@dimen/loginCardRadius"-->
        <!--            android:elevation="5dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:background="@color/whiteCardColor">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/modifiedEditText"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/parent"
                android:layout_marginTop="@dimen/signup_text_margin_top">

                <EditText
                    android:id="@+id/et_seniority"
                    style="@style/modifiedEditText"
                    android:hint="Seniority"
                    android:inputType="date"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                style="@style/modifiedEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:text="Pick your specialize:"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_functional"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Functional" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_crossfit"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="Crossfit" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_band"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Rubber band" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_aerobic"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Aerobic" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_abs"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Abs" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_yoga"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Yoga" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_pilatis"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Pilatis" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_trx"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TRX" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_other"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="Other" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                style="@style/modifiedEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:text="Upload your diploma:"
                android:textSize="16sp" />


            <!--        todo: change the size programmilcy-->
            <LinearLayout
                android:id="@+id/bbb"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_border"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/diploma_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/add_diploma_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Upload coach diploma \n press here"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_approach"
                style="@style/loginButton"
                android:layout_gravity="center"
                android:text="Approach" />


        </LinearLayout>
        <!--        </androidx.cardview.widget.CardView>-->

    </ScrollView>


</LinearLayout>

